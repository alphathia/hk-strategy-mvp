# HK Strategy Portfolio Dashboard Environment Variables
# Copy this file to .env and update with your actual values
# IMPORTANT: Never commit .env file with real credentials to version control

# Database Configuration (Required)
DATABASE_URL=postgresql://trader:YOUR_SECURE_PASSWORD@localhost:5432/hk_strategy
DATABASE_PASSWORD=YOUR_SECURE_PASSWORD
DB_USER=trader
DB_PASSWORD=YOUR_SECURE_PASSWORD
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hk_strategy

# Redis Configuration (Optional but recommended for performance)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_ENABLED=true

# Application Settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO

# Cache Configuration
CACHE_ENABLED=true
CACHE_PRICE_TTL=1800
CACHE_INDICATOR_TTL=1800

# Yahoo Finance API Settings
YF_RATE_LIMIT=true
YF_TIMEOUT=30

# Security Settings (Optional)
SESSION_TIMEOUT=3600
MAX_PORTFOLIO_SIZE=1000
MAX_SYMBOLS_PER_PORTFOLIO=100

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Instructions:
# 1. Copy this file: cp .env.template .env
# 2. Replace YOUR_SECURE_PASSWORD with a strong password (12+ characters)
# 3. Update other settings as needed for your environment
# 4. Never commit the .env file to git - it's excluded by .gitignore